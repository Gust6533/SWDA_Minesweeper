

public class Timer {
	private long current_time;
	private long totalTime;
	
	public void Timer()
	{
		totalTime = 0;
	}
	
	public void startTimer()
	{
		current_time = System.currentTimeMillis();
	}
	
	public void stopTimer()
	{
		long i = System.currentTimeMillis();
		
		totalTime += i - current_time;
	}
}
