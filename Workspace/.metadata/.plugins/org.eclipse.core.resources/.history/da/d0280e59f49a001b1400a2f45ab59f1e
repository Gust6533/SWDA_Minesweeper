import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Manager {
	private diffculty currentDifficulty = diffculty.Meduim;
	private Board gameBoard;
	private Artist artist;
	private ActionListener actionListener;
	
	public Manager(){
		gameBoard = new Board(currentDifficulty);
		actionListener = new ActionListener();
		artist = new Artist(gameBoard);
	}
	
	public void restart()
	{
		gameBoard = new Board(currentDifficulty);
	}
	
	public void setDifficulty(diffculty dif)
	{
		currentDifficulty = dif;
		gameBoard = new Board(currentDifficulty);
	}
	
	public void buttonPress(int x, int y)
	{
		
	}
	
	//used to determine when a button is pressed
	
	{
	    public void actionPerformed(ActionEvent actionEvent) {
	        System.out.println(actionEvent.getActionCommand());
	        
	    }
	};
	
	public static void main(String[] args)
	{
		Manager m = new Manager();
		
	}
	
	 
}
